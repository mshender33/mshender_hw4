<%= form_with(model: [@place, @entry], local: true, html: { multipart: true }) do |form| %>
  <div class="mb-3">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :occurred_on, "Date of Visit" %>
    <%= form.date_field :occurred_on, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", rows: 3, required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :image %>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <%= form.submit "Save Entry", class: "btn btn-success" %>
<% end %>
