<!DOCTYPE html>
<html>
<head>
  <title>Travel Journal</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application" %>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <%= link_to "Travel Journal", root_path, class: "navbar-brand" %>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
              aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <% if session[:user_id] %>
            <!-- User is logged in -->
            <li class="nav-item">
              <%= link_to "Dashboard", places_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Logout", logout_path, method: :delete, class: "btn btn-danger text-white nav-link" %>
            </li>
          <% else %>
            <!-- User is NOT logged in -->
            <li class="nav-item">
              <%= link_to "Sign Up", new_user_path, class: "btn btn-success mx-2" %> <!-- Ensures correct route -->
            </li>
            <li class="nav-item">
              <%= link_to "Log In", login_path, class: "btn btn-primary" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <%= yield %>
  </div>

  <!-- Bootstrap JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
